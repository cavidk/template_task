<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:paddingStart="20dp"
        android:text="Daxil ol"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:drawableLeftCompat="@drawable/baseline_arrow_back_24"
        tools:ignore="RtlSymmetry" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="130dp" />


    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Telefon nömrəsi"
        android:inputType="phone"
        android:paddingStart="20dp"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/editTextTextPassword2"
        android:layout_width="380dp"
        android:layout_height="58dp"
        android:layout_gravity=""
        android:layout_marginStart="15dp"
        android:layout_marginTop="20sp"
        android:drawableEnd="@drawable/baseline_visibility_off_24"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:hint="Şifrə"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/poppins"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:text="@string/underlined_text"
        android:textColor="#FF9800"
        tools:ignore="RtlSymmetry" />

    <Space
        android:layout_width="10dp"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:backgroundTint="#F1D856"
        android:fontFamily="@font/poppins_medium"
        android:onClick="enterBtn"
        android:text="Daxil ol"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:cornerRadius="8dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/icons8_google_100"
        android:fontFamily="@font/poppins_medium"
        android:paddingStart="70dp"
        android:textSize="15sp"
        android:text="Google'la ilə davam edin"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/black"
        tools:ignore="RtlCompat,RtlHardcoded,RtlSymmetry" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="494dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/poppins"
            android:text="Hesabınız yoxdur?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="43dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:fontFamily="@font/poppins"
            android:text="@string/underlined_text2"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="16sp"
            tools:ignore="RtlCompat,RtlHardcoded" />

    </LinearLayout>

</LinearLayout>